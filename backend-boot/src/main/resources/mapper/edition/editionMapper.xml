<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "../../../dtd/mybatis-3-mapper.dtd" >
<mapper namespace="cn.com.qingqfeng.archer.dao.edition.IEditionDao" >
    <resultMap id="BaseResultMap" type="cn.com.qingqfeng.archer.pojo.edition.EditionDO" >
        <id column="id" property="id" jdbcType="VARCHAR" />
        <result column="title" property="title" jdbcType="VARCHAR" />
        <result column="user_id" property="userId" jdbcType="VARCHAR" />
        <result column="create_time" property="createTime" jdbcType="TIMESTAMP" />
        <result column="modify_time" property="modifyTime" jdbcType="TIMESTAMP" />
        <collection property="articles" ofType="cn.com.qingqfeng.archer.pojo.article.ArticleDO">
            <id column="ar_id" property="id" />
	        <result column="ar_title" property="title" jdbcType="VARCHAR" />
	        <result column="backend_content" property="backendContent" jdbcType="LONGVARCHAR" />
        </collection>
    </resultMap>
<!-- 根据用户id -->
    <select id="queryEditionsByUserId" parameterType="java.lang.String" resultMap="BaseResultMap"  >
       SELECT 
            a.id, a.title, a.user_id, a.create_time, a.modify_time, b.id as ar_id, b.title as ar_title, b.backend_content
       FROM 
            qfeng_edition a 
       LEFT JOIN 
            qfeng_article b ON a.id=b.edition
       WHERE a.is_delete =0 and a.user_id = #{id}
       ORDER BY
            a.create_time DESC
    </select>
    
<!-- 添加     -->
    <insert id="addEdition" parameterType="cn.com.qingqfeng.archer.pojo.edition.EditionDO" >
       INSERT INTO 
            qfeng_edition
            (id, title, user_id, create_time, modify_time)
        VALUES
            (#{id}, #{title}, #{userId}, #{createTime}, #{modifyTime})
    </insert>
<!-- 更新     -->
    <update id="updateArticle" parameterType="cn.com.qingqfeng.archer.pojo.edition.EditionDO" >
       UPDATE 
            qfeng_article
       <trim prefix="set" suffixOverrides=",">
           <if test="title != null">title = #{title},</if>
           <if test="userId != null">user = #{userId},</if>
           <if test="createTime != null">create_time = #{createTime},</if>
           <if test="modifyTime != null">modify_time = #{modifyTime},</if>
       </trim>
       WHERE 
            id = #{id}
    </update>
<!-- 删除     -->
    <delete id="deleteArticle" parameterType="java.lang.String" >
       UPDATE 
             qfeng_edition
       SET
             is_delete=1 
       WHERE 
             id =#{id}
    </delete>
    
</mapper>
